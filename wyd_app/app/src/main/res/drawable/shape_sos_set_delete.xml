<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 单击时的背景颜色 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/pressed_color"/>
            <corners android:topLeftRadius="84dp" android:topRightRadius="84dp" android:bottomLeftRadius="84dp" android:bottomRightRadius="84dp" />
        </shape>

    </item>
    <!-- 未单击时的背景颜色 -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
             <solid android:color="@color/record_txt_red_color" />
             <corners android:topLeftRadius="84dp" android:topRightRadius="84dp" android:bottomLeftRadius="84dp" android:bottomRightRadius="84dp" />
        </shape>
    </item>
</selector>
