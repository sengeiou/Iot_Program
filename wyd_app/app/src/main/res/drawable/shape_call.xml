<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 单击时的背景颜色 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/pressed_color"/>
            <corners
                android:bottomLeftRadius="@dimen/w_4"
                android:bottomRightRadius="@dimen/w_4"
                android:topLeftRadius="@dimen/w_4"
                android:topRightRadius="@dimen/w_4"/>
        </shape>
    </item>
    <!-- 未单击时的背景颜色 -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/dialer_tab_back"/>
            <corners
                android:bottomLeftRadius="@dimen/w_4"
                android:bottomRightRadius="@dimen/w_4"
                android:topLeftRadius="@dimen/w_4"
                android:topRightRadius="@dimen/w_4"/>
        </shape>
    </item>
</selector>
