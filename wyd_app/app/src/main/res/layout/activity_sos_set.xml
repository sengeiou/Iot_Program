<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contact_edit_bg">
    <RelativeLayout
        android:id="@+id/title_view"
        android:background="@color/tab_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_48">
        <TextView
            android:id="@+id/title_text"
            android:paddingLeft="@dimen/w_20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:text="SOS"
            android:textColor="@color/white"
            android:textSize="@dimen/f_22" />
        <TextView
            android:id="@+id/finish_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/w_20"
            android:text="@string/finish"
            android:textColor="@color/white"
            android:textSize="@dimen/f_18" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
            android:layout_below="@id/title_view"
            android:id="@+id/recycle_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/w_20"
            android:layout_marginLeft="@dimen/w_16"
            android:layout_marginRight="@dimen/w_16"/>
    <TextView
        android:id="@+id/txt_delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_54"
        android:layout_marginLeft="@dimen/w_20"
        android:layout_marginRight="@dimen/w_20"
        android:background="@drawable/shape_sos_set_delete"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/w_20"
        android:gravity="center"
        android:text="@string/delete"
        android:textSize="@dimen/f_35"/>
</RelativeLayout>