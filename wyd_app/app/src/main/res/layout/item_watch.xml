<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/w_50">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/w_28"
        android:layout_height="@dimen/w_28"
        android:layout_marginTop="@dimen/w_6"
        android:layout_marginBottom="@dimen/w_6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@mipmap/icon_kitchen" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/w_8"
        android:text="卧室床榻温度—正常"
        android:textColor="@color/white"
        android:textSize="@dimen/w_9"
        app:layout_constraintLeft_toRightOf="@+id/icon"
        app:layout_constraintTop_toTopOf="@+id/icon" />

    <TextView
        android:id="@+id/descrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature Sensor"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/w_8"
        android:textSize="@dimen/w_6"
        app:layout_constraintLeft_toLeftOf="@+id/status"
        app:layout_constraintTop_toBottomOf="@+id/status" />

    <ImageView
        android:id="@+id/status_icon"
        android:layout_width="@dimen/w_16"
        android:layout_height="@dimen/w_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/icon_normal" />
</android.support.constraint.ConstraintLayout>