<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:id="@+id/layout_search"
        android:paddingLeft="@dimen/w_10"
        android:paddingRight="@dimen/w_10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:background="@drawable/shape_contact_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_40"
        android:layout_marginRight="@dimen/w_9"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_search"
            android:src="@mipmap/groupgroup69"
            android:layout_width="@dimen/w_24"
            android:layout_height="@dimen/w_24"
            android:layout_marginLeft="@dimen/w_8"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/search_edt"
            android:layout_marginLeft="@dimen/w_10"
            android:textColor="@color/sos_txt_color"
            android:layout_toRightOf="@id/iv_search"
            android:textSize="@dimen/f_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_contacts"
        android:layout_marginTop="@dimen/w_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
