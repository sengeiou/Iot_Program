<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        app:layout_scrollFlags="scroll|enterAlways">


        <com.vtech.app.view.BaseViewPager
            android:id="@+id/vp_horizontal_ntb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <FrameLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_2"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/w_120"
            android:background="#00000000"
            app:layout_scrollFlags="scroll|enterAlways">

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_main_rectangle"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_main_rectangle"
                    android:layout_marginRight="@dimen/w_3"
                    android:layout_marginLeft="@dimen/w_3"
                    android:checked="true"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_main_rectangle"
                    android:button="@null" />
            </RadioGroup>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>