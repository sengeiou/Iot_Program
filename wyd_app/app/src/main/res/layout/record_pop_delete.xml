<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/layout_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_45"
        android:background="@color/contact_edit_bg"
        android:visibility="gone">
        <TextView
            android:id="@+id/txt_add_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_16"
            android:layout_centerInParent="true"
            android:text="@string/add_new_contact"
            android:textSize="@dimen/f_16"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/white"/>
    <RelativeLayout
       android:id="@+id/layout_delete"
       android:layout_width="match_parent"
       android:layout_height="@dimen/w_45"
       android:background="@color/contact_edit_bg">
        <TextView
            android:id="@+id/txt_delete_contact_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_16"
            android:layout_centerInParent="true"
            android:text="@string/delete_dialer_record"
            android:textSize="@dimen/f_16"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/white"/>
    <RelativeLayout
        android:id="@+id/layout_add_blocked_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_45"
        android:background="@color/contact_edit_bg">
        <TextView
            android:id="@+id/txt_add_blocked_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_16"
            android:layout_centerInParent="true"
            android:textSize="@dimen/f_16"
            android:textColor="@color/black"/>
    </RelativeLayout>
</LinearLayout>

