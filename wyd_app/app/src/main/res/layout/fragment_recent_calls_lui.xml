<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/contact_detail_recent_call_title"
        android:text="Recent Calls"
        android:layout_marginLeft="@dimen/w_18"
        android:textSize="@dimen/f_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/w_13"
        android:layout_below="@+id/contact_detail_recent_call_title"
        android:layout_marginRight="@dimen/w_18"
        android:layout_marginLeft="@dimen/w_18"
        android:id="@+id/rv_contact_calllogg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>