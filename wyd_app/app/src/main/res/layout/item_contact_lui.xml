<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:clickable="true"
    android:background="@drawable/shape_contact_item_red"
    android:layout_width="@dimen/w_300"
    android:layout_height="@dimen/w_300"
    android:paddingBottom="@dimen/w_10">

    <ImageView
        android:id="@+id/contact_icon"
        android:layout_width="@dimen/w_80"
        android:layout_height="@dimen/w_80"
        android:src="@mipmap/contact_icon_def_lui"
        android:layout_marginTop="@dimen/w_10"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/contact_name"/>

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/home_app_name_color"
        android:text="@string/contacts_name"
        android:textSize="@dimen/f_22"
        android:textStyle="bold"
        android:paddingLeft="@dimen/w_16"
        android:paddingRight="@dimen/w_16"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contact_icon"
        app:layout_constraintBottom_toTopOf="@id/contact_number"/>

    <TextView
        android:id="@+id/contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/home_app_name_color"
        android:text="13800001234"
        android:textSize="@dimen/f_14"
        android:paddingLeft="@dimen/w_16"
        android:paddingRight="@dimen/w_16"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contact_name"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>