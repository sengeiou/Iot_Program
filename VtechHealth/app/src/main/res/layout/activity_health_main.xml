<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".function.main.MainHealthActivity">


    <com.vtech.vhealth.function.widget.AutofitHeightViewPager
        android:id="@+id/vp_health"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_health">

    </com.vtech.vhealth.function.widget.AutofitHeightViewPager>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_health"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:visibility="gone"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/color_white"
        app:tabIndicatorHeight="@dimen/dp_2"
        app:tabSelectedTextColor="@color/common_tab_item_tv_selector" />


</androidx.constraintlayout.widget.ConstraintLayout>